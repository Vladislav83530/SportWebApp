@model SportWebApp.ViewModels.RegisterViewModel
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SportWebApp</title>
	<link rel="stylesheet" href="~/css/Register.css" />
</head>
<body>
	<section class="main_section">
		<div class="container main_container">
			<h2 class="reg_title">Sign up</h2>
			<div class="row">
				<div class="col-lg-6"> 
				<form method="post" asp-controller="Account" asp-action="Register">
					<div asp-validation-summary="ModelOnly"></div>
					<div>
						<label asp-for="Name"></label><br />
						<input class="form-control mb-3" asp-for="Name" />
						<span asp-validation-for="Name"></span>
					</div>
					<div>
						<label asp-for="UserSurname"></label><br />
						<input class="form-control mb-3" asp-for="UserSurname" />
						<span asp-validation-for="UserSurname"></span>
					</div>
					<div>
						<label asp-for="Email"></label><br />
						<input class="form-control mb-3" asp-for="Email" />
						<span asp-validation-for="Email"></span>
					</div>
					<div>
						<label asp-for="Password"></label><br />
						<input class="form-control mb-3" asp-for="Password" />
						<span asp-validation-for="Password"></span>
					</div>
					<div>
						<label asp-for="PasswordConfirm"></label><br />
						<input class="form-control mb-3" asp-for="PasswordConfirm" />
						<span asp-validation-for="PasswordConfirm"></span>
					</div>
					<div>
						<input type="submit" class="btn btn-primary btn_sigup" value="Sign up" />
					</div>
				</form>
				</div>
			</div>
		</div>
	</section>
</body>
</html>
