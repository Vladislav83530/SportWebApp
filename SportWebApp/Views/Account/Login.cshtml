@model SportWebApp.ViewModels.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SportWebApp</title>
	<link rel="stylesheet" href="~/css/Register.css" />
</head>
<body>
	<section class="main_section">
		<div class="container main_container">
			<h2 class="reg_title">Sign in</h2>
			<div class="row">
				<div class="col-lg-6">
					<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
						<div asp-validation-summary="ModelOnly"></div>
						<div>
							<label asp-for="Email"></label><br />
							<input class="form-control mb-3" asp-for="Email" />
							<span asp-validation-for="Email"></span>
						</div>
						<div>
							<label asp-for="Password"></label><br />
							<input class="form-control mb-3" asp-for="Password" />
							<span asp-validation-for="Password"></span>
						</div>
						<div>
							<label asp-for="RememberMe"></label><br />
							<input class="mb-3" asp-for="RememberMe" />
						</div>
						<div>
							<input class="btn btn-primary btn_sigup" type="submit" value="Sign in" />
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
</body>
</html>
