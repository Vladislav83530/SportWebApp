<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SportWebApp</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.1.3/flatly/bootstrap.css" integrity="sha512-0HdGPfUJnCmiBwfVnKKs0Vs17/qa/48jm14IJXmUQx6HnPV1Vc7CX2btAjlyKKjgzv4Yhf1d69FmLcunSOoTEA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
	<header>
		@if (User.Identity.IsAuthenticated)
		{
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
				<div class="container-fluid">
					<a class="navbar-brand" href="#">YourWay</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarColor01">
						<ul class="navbar-nav me-auto">
							<li class="nav-item">
								<a class="nav-link active" href="#">
									Головна
									<span class="visually-hidden">(current)</span>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">Харчування</a>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Тренування</a>
								<div class="dropdown-menu">
									<a class="dropdown-item" href="#">Тренування</a>
									<a class="dropdown-item" href="#">Вправи</a>
									<a class="dropdown-item" href="#">Календар</a>
								</div>
							</li>
						</ul>
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link" uiactions="Index" asp-controller="ProfileInfo">@User.Identity.Name</a>
							</li>
						</ul>
						<form class="nav-item" asp-action="Logout" asp-controller="Account">
							<ul class="navbar-nav">
								<li class="nav-item">

									<button type="submit" class="btn btn-success">Вийти</button>
								</li>
							</ul>
						</form>

					</div>
				</div>
			</nav>
		}
		else
		{
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
				<div class="container-fluid">
					<a class="navbar-brand" href="#">YourWay</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarColor01">
						<ul class="navbar-nav me-auto">
							<li class="nav-item">
								<a class="nav-link active" href="#">
									Головна
									<span class="visually-hidden">(current)</span>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">Харчування</a>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Тренування</a>
								<div class="dropdown-menu">
									<a class="dropdown-item" href="#">Тренування</a>
									<a class="dropdown-item" href="#">Вправи</a>
									<a class="dropdown-item" href="#">Календар</a>
								</div>
							</li>
						</ul>
						<form class="d-flex">
							<ul class="navbar-nav">
								<li class="nav-item">
									<a class="nav-link" asp-action="Register" asp-controller="Account">Реєстрація</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" asp-action="Login" asp-controller="Account">Увійти</a>
								</li>
							</ul>
						</form>
					</div>
				</div>
			</nav>
		}
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2022 - SportWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	@*	<script src="~/lib/jquery/dist/jquery.min.js"></script>
		<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
